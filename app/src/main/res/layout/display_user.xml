<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="18dp"
    android:layout_marginRight="18dp"
    android:background="#85CF4F"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPlaceHolderItemName"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:text="Item name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPlaceHolderDescription"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/removeimg"
            app:srcCompat="@drawable/removeimg" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/editimg"
            app:srcCompat="@drawable/editimg" />

        <EditText
            android:id="@+id/fieldChangeName"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:visibility="visible" />

        <EditText
            android:id="@+id/fieldChangeDescription"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Description"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BC2020"
            android:text="Save" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
